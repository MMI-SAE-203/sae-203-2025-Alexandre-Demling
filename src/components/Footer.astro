---
import IconLogo from '../assets/icons/icon_logo.svg';
import IconFacebook from '../assets/icons/icon_facebook-blanc.svg';
import IconYoutube from '../assets/icons/icon_youtube-blanc.svg';
import IconTiktok from '../assets/icons/icon_tiktok-blanc.svg';
import IconStrava from '../assets/icons/icon_strava-blanc.svg';
import IconInstagram from '../assets/icons/icon_insta-blanc.svg';
---

<footer class="bg-black text-white py-8 px-4">
  <div class="container mx-auto max-w-6xl">
    <div class="flex flex-col items-center md:items-start md:flex-row md:justify-between">
      <!-- Logo et nom -->
      <div class="flex items-center mb-8 md:mb-0">
        <IconLogo class="w-[60px] h-[60px]" />
        <h2 class="text-2xl font-bold ml-3">Ça va trail'er</h2>
      </div>

      <!-- Espace vide pour l'alignement -->
      <div class="hidden md:block"></div>

      <!-- Bouton Billeterie -->
      <div class="mb-12 md:mb-0">
        <a href="/billeterie" class="inline-block px-10 py-3 bg-white text-black font-bold rounded-full border-2 border-red-600 hover:bg-gray-100 transition">
          BILLETERIE
        </a>
      </div>
    </div>

    <!-- Section Contact -->
    <div class="text-center mt-16">
      <h3 class="text-4xl font-black uppercase mb-2 tracking-wide">CONTACT</h3>
      <p class="text-lg">cavatrailer@festival.com</p>
    </div>

    <!-- Section Réseaux Sociaux -->
    <div class="mt-16">
      <h3 class="text-center text-xl font-bold uppercase mb-6" style="color: #FF0000;">NOUS SUIVRE</h3>
      <div class="flex justify-center space-x-6">
        <a href="#" class="hover:opacity-80 transition">
          <IconFacebook class="w-10 h-10" />
        </a>
        <a href="#" class="hover:opacity-80 transition">
          <IconInstagram class="w-10 h-10" />
        </a>
        <a href="#" class="hover:opacity-80 transition">
          <IconYoutube class="w-10 h-10" />
        </a>
        <a href="#" class="hover:opacity-80 transition">
          <IconStrava class="w-10 h-10" />
        </a>
        <a href="#" class="hover:opacity-80 transition">
          <IconTiktok class="w-10 h-10" />
        </a>
      </div>
    </div>

    <!-- Section légale -->
    <div class="text-center mt-16">
      <a href="/mentions-legales" class="uppercase font-bold text-2xl hover:text-gray-300 transition">
        MENTIONS LÉGALES
      </a>
      <div class="mt-4 text-sm text-gray-400">
        <p class="mb-2">© 2024 Ça va trail'er Festival - Tous droits réservés</p>
        <div class="flex justify-center gap-2 flex-wrap">
          <a href="/mentions-legales" class="hover:text-white transition">Mentions légales</a>
          <span class="text-gray-600">|</span>
          <a href="/politique-confidentialite" class="hover:text-white transition">Politique de confidentialité</a>
          <span class="text-gray-600">|</span>
          <a href="/conditions-generales" class="hover:text-white transition">Conditions générales</a>
        </div>
      </div>
    </div>
  </div>
</footer>

